<%- include("partials/header.ejs") %> <%- include("partials/navbar.ejs") %>

<section class="intro">
  <div class="intro-text">
    <h1 class="intro-greet">Hello!</h1>
    <h2 class="intro-desc">
      Welcome to my reading notes! Here, I share interesting insights and
      highlights from the books I’ve read. I hope you find them useful.
    </h2>
  </div>
</section>

<section class="books">
  <% if (locals.books) { %>
  <h2 class="books-read">Books list</h2>
  <ul>
    <% books.forEach(book => { %>
    <div class="book">
      <a href="/notes/<%= book.id %>">
        <img
          src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-M.jpg"
          alt="<%= book.title %>"
        />
      </a>
      <div class="book-desc">
        <h2><%= book.title %></h2>
        <p>📝 Author : <%= book.author_name %></p>
        <h3><%= book.description %></h3>
        <p>📚 Personal Rating : <%= book.personal_rating %></p>
        <a href="/notes/<%= book.id %>" class="book-btn">View Notes</a>
      </div>
    </div>
    <% }) %>
  </ul>
  <% } %>
</section>

<%- include("partials/footer.ejs") %>
