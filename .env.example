DB_PASSWORD=your_secure_password
DB_NAME=books
DB_PORT=5432
# Leave as localhost for local Node execution. Docker Compose will automatically override this to 'db'.
DB_HOST=localhost

# App Secrets
SESSION_SECRET=your_super_secret_session_key

# Google OAuth Variables (Required for login)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
AUTH_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Admin Settings (allows a specific email address to access the admin dashboard)
ADMIN_EMAIL=admin@example.com

# Production Database URL (Optional, for deployments like Render/Heroku)
DATABASE_URL=postgresql://user:password@hostname:port/database_name